@model NatzHarmonyCapstone.Models.ProfileFormViewModel

@{
    ViewData["Title"] = "MyProfile";
}

<h2>MyProfile</h2>

<div>
    <hr />
   
        <img src="~/images/@Model.AvatarUrl" style="max-height: 75px; max-width: 75px;" />
   
    <dl class="row">

        <dt class="col-sm-2">
            Full Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pronouns)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pronouns)
        </dd>
        <dt class="col-sm-2">
            Are you a Mentor?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mentor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LanguagePref)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LanguagePref)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CountryPref)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CountryPref)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GenderPref)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenderPref)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Availability)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Availability)
        </dd>
    </dl>
</div>
<div>
        <a class="nav-link text-dark" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">Manage Account </a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
</div>

@model NatzHarmonyCapstone.Models.ProfileFormViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card bg-light mb-3" style="max-width: 60rem;">
    <hr />

    <img src="~/images/@Model.AvatarUrl" style="max-height: 75px; max-width: 75px;" />

    <dl class="row">

        <dt class="col-sm-2">
            Full Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pronouns)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pronouns)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="@Model.ReturnController" asp-action="@Model.ReturnAction">Back Button Placeholder</a>
</div>
